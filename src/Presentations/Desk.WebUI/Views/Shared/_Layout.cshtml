<!DOCTYPE html>
<html lang="en" dir="auto">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Technology on it!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-body-tertiary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="me-2" src="~/assets/images/logo/logo.svg" width="20" height="30" />
                    Techonit Desk
                </a>
                @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="auth" asp-action="signin">Signin</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="auth" asp-action="signup">Signup</a>
                        </li>*@
                    </ul>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/dashboard/structure">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/authentication/signout">Signout</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            @*                            <li class="nav-item">
                        <a class="nav-link text-dark" href="/authentication/signin">Signin</a>
                        </li>*@
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main class="container pb-3" role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container">
            &copy; 2023 - Technology on it • Desk
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/rest.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script>
        // Direction auto
        $('input[type=text], textarea').keyup(function () {
            $(this).val().charAt(0).charCodeAt(0) > 200 ?
                $(this).css('direction', 'rtl') : $(this).css('direction', 'ltr');
        });
        // Dark mode
        var mode = "light";
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches)
            mode = 'dark';
        $('body').attr("data-bs-theme", mode);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
