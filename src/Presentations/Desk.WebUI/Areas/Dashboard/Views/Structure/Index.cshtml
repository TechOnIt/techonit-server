@model IList<TechOnIt.Application.Common.Models.ViewModels.Structures.StructureCardViewModel>
@{
    ViewData["Title"] = "Structures";
}

<div class="container-fluid">
    <h3>My structures</h3>
    <div class="mt-5">
        <div class="row">
            @foreach (var structure in Model)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column text-center">
                                <h3><i class="fa fa-home"></i></h3>
                                <label class="fw-bolder">@structure.Name</label>
                                <span class="text-muted small">Name</span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-sm mx-auto btn-primary w-100" href="">Manage</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>