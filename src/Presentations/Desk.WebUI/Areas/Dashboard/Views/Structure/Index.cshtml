@model IList<TechOnIt.Application.Common.Models.ViewModels.Structures.StructureCardViewModel>
@{
    ViewData["Title"] = "Structures";
}
<div class="container-fluid">
    <h3>My structures</h3>
    <div class="mt-5">
        <div class="row">
            @foreach (var structure in Model)
            {
                if (structure.IsActive)
                {

                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="card user-select-none">
                            <div class="card-body">
                                <div class="d-flex flex-column text-center">
                                    <div class="row mb-2">
                                        <div class="col smallest text-start">
                                            <i class="fa fa-circle text-green"></i>
                                        </div>
                                        <div class="col h2"><i class="fa fa-home text-secondary"></i></div>
                                        <div class="col"></div>
                                    </div>
                                    <label class="h5 fw-bolder text-primary">@structure.Name</label>
                                    <label class="text-muted smaller">Name</label>
                                </div>
                            </div>
                            <div class="card-footer d-flex gap-1">
                                <a class="btn btn-sm mx-auto btn-primary w-100" href="structure/info?id=@structure.Id">Manage</a>
                                <a class="btn btn-sm mx-auto btn-secondary" href="#"><i class="fa fa-cog"></i></a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-12 col-sm-6 col-md-3">
                        <div class="card user-select-none">
                            <div class="card-body">
                                <div class="d-flex flex-column text-center">
                                    <div class="row mb-2">
                                        <div class="col smallest text-start">
                                            <i class="fa fa-circle text-secondary opacity-50"></i>
                                        </div>
                                        <div class="col h2"><i class="fa fa-home text-secondary opacity-50"></i></div>
                                        <div class="col"></div>
                                    </div>
                                    <label class="h5 fw-bolder text-secondary">@structure.Name</label>
                                    <label class="text-muted smaller">Name</label>
                                </div>
                            </div>
                            <div class="card-footer text-center">
                                <label class="text-secondary small">This structure is deactive.</label>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>