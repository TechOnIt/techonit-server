@using TechOnIt.Application.Common.Models.ViewModels.Relay;
@using TechOnIt.Desk.Web.Areas.Dashboard.Components;
@model IList<RelayCardControlViewModel>

@if (Model is not null && Model.Count > 0)
{
    <div class="d-flex flex-wrap gap-1">
        @foreach (var relay in Model)
        {
            @* Relay Control *@
            @await Component.InvokeAsync(typeof(RelayCardControlViewComponent), new { relay })
        }
    </div>
}
else
{
    @* Device Not Found *@
    <div class="text-center">
        <p class="text-muted small mt-4">No items found.</p>
    </div>
}