@using TechOnIt.Application.Common.Models.ViewModels.Structures;
@model IList<StructureCardViewModel>

<div class="row">
    @* Structures *@
    @if (Model.Count > 0)
    {
        <div class="d-flex justify-content-between mb-4">
            <div class="central">
                <label class="fw-bold h2">My structures</label>
            </div>
            <div class="central">
                <div class="dropdown">
                    <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#newStructureModal">
                                <i class="fa fa-plus me-2"></i> Add New
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @foreach (var structure in Model)
        {
            <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                @await Component.InvokeAsync(typeof(StructureCardViewComponent),new { structure })
            </div>
        }
    }
    else
    {
        <div class="col-12 col-md-6 offset-md-3">
            <img class="w-100 opacity-75" src="~/assets/images/stocks/farm-house-bro.svg" />
        </div>
        <div class="col-12">
            <div class="text-center">
                <label class="h3 fw-bold">No structures were found!</label>
            </div>
            <div class="d-grid d-sm-block text-center mt-3">
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newStructureModal">+ New</button>
            </div>
        </div>
    }
</div>