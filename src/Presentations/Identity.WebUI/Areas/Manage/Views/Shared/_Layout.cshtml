<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Technology on it!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dark-theme.min.css" />
    <link href="~/css/vertical-layout.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="dark-layout menu-collapsed bg-dark-noise">
    <!-- BEGIN: Header-->
    <nav class="header-navbar fixed-top navbar-dark">
        <div class="w-100 d-flex justify-content-between container-fluid">
            <div class="d-grid">
                <button class="nav-link" onclick="$('body').toggleClass('menu-collapsed')">
                    <i class="fa fa-list"></i>
                </button>
            </div>
            <div class="d-flex">
                <ul class="nav">
                    <li class="nav-item">
                        <button class="nav-link">
                            <i class="fa fa-bell"></i>
                            <div class="badge bg-danger sticky rounded-pill">3</div>
                        </button>
                    </li>
                </ul>
                @* Profile *@
                <div>
                    <a class="nav-link" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                        <img class="profile rounded-circle" src="~/assets/images/profile_avatar_placeholder.png" width="40" />
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">ویرایش</a>
                        <a class="dropdown-item" href="/identity/manage/signout">Signout</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- END: Header-->
    <!-- BEGIN: Main Menu-->
    <div class="menu-fixed main-menu vh-100" style="touch-action: none; user-select: none;">
        <div class="d-block d-sm-none pt-5">
            <div class="pt-4"></div>
        </div>
        <div class="d-none d-sm-block mb-3">
            <div class="central" style="height: 56px; background: radial-gradient(ellipse at top,#3f6be1ad,#385ab642,#1a233a00);">
                <a class="navbar-brand text-center m-0" href="/">
                    <img src="~/assets/images/logo/logo-x40.png" style="height:40px;" />
                    <label class="ellipsis-text extra ms-2">Techonit</label>
                </a>
            </div>
        </div>
        <div class="pr-4 pr-sm-0 pl-4 pl-sm-0">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" href="/manage/dashboard">
                        <i class="fa fa-tachometer-alt"></i>
                        <div class="extra">Overview</div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/manage/user">
                        <i class="fa fa-users"></i>
                        <div class="extra">Users</div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/manage/role">
                        <i class="fa fa-certificate"></i>
                        <div class="extra">Roles and Permissions</div>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- END: Main Menu-->
    <!-- BEGIN: Content-->
    <main role="main" class="content">
        <div id="app" class="content-wrapper container-fluid px-4">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.2.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.2.0/chart.umd.js"></script>
    <script src="~/lib/persian-date/persian-date.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
